<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Page">
    <jcr:content
        jcr:mixinTypes="[]"
        jcr:primaryType="nt:unstructured"
        jcr:title="AEM Dialog Conversion Tool"
        sling:resourceType="granite/ui/components/shell/page"
        consoleId="dialogConversion">
        <head jcr:primaryType="nt:unstructured">
            <clientlibs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/includeclientlibs"
                categories="[granite.ui.foundation,granite.ui.foundation.admin,cq.jquery,cq.dialogconversion]"/>
        </head>
        <title
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/text"
            text="AEM Dialog Conversion Tool"/>
        <content
            granite:class="js-cq-DialogConverter-container cq-DialogConverter-container"
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
            <items jcr:primaryType="nt:unstructured">
                <searchDialogContent
                    granite:class="js-cq-DialogConverter-dialogsContainer cq-DialogConverter-dialogsContainer"
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/container">
                    <granite:data
                        jcr:primaryType="nt:unstructured"
                        search-path="${empty param.path ? &quot;&quot; : param.path}"/>
                    <items jcr:primaryType="nt:unstructured">
                        <pathBrowser
                            granite:class="js-cq-DialogConverter-searchPath cq-DialogConverter-searchPath u-coral-pullLeft"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                            emptyText="Enter a path, e.g. /apps/geometrixx/components"/>
                        <showButton
                            granite:class="js-cq-DialogConverter-showDialogs cq-DialogConverter-showDialogs u-coral-pullLeft"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/button"
                            text="Show dialogs"/>
                        <text
                            granite:class="js-cq-DialogConverter-infoText cq-DialogConverter-infoText"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/text"
                            text=""/>
                        <toggleAll
                            granite:class="js-cq-DialogConverter-toggleDialogRows hide"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                            text="Select all convertible dialogs"/>
                        <showConverted
                            granite:class="js-cq-DialogConverter-showConvertedDialogRows hide"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                            text="Show converted dialogs"/>
                        <dialogs
                            granite:class="js-cq-DialogConverter-dialogs cq-DialogConverter-dialogs"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/table"
                            itemResourceType="cq/dialogconversion/components/dialogs/item"
                            orderable="{Boolean}false"
                            path="${param.path}"
                            selectionMode="row"
                            skipEmptyRow="{Boolean}true">
                            <columns jcr:primaryType="nt:unstructured">
                                <check jcr:primaryType="nt:unstructured"/>
                                <dialogPath
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Dialog path"
                                    sortable="{Boolean}true"/>
                                <links
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Classic UI"
                                    sortable="{Boolean}true"/>
                                <touchDialog
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Touch UI"
                                    sortable="{Boolean}true"/>
                            </columns>
                            <datasource
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="cq/dialogconversion/components/dialogs/datasource"/>
                        </dialogs>
                        <convertButton
                            granite:class="js-cq-DialogConverter-convertDialogs cq-DialogConverter-convertDialogs"
                            granite:hidden="{Boolean}true"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/button"
                            text="Convert dialogs"/>
                    </items>
                </searchDialogContent>
                <convertedDialogs
                    granite:class="js-cq-DialogConverter-conversionResults cq-DialogConverter-conversionResults"
                    granite:hidden="{Boolean}true"
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/table"
                    orderable="{Boolean}false">
                    <columns jcr:primaryType="nt:unstructured">
                        <dialogPath
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Dialog path"
                            sortable="{Boolean}true"/>
                        <conversion
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Conversion to Touch UI"
                            sortable="{Boolean}true"/>
                        <message
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Message"
                            sortable="{Boolean}true"/>
                    </columns>
                </convertedDialogs>
            </items>
        </content>
    </jcr:content>
</jcr:root>
