<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Page">
    <jcr:content
        jcr:mixinTypes="[]"
        jcr:primaryType="nt:unstructured"
        jcr:title="AEM Dialog Conversion Tool"
        sling:resourceType="granite/ui/components/shell/page"
        consoleId="dialogConversion">
        <head jcr:primaryType="nt:unstructured">
            <clientlibs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/includeclientlibs"
                categories="[granite.ui.foundation,granite.ui.foundation.admin,cq.jquery,cq.dialogconversion]"/>
        </head>
        <title
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/text"
            text="AEM Dialog Conversion Tool"/>
        <content
            granite:class="js-cq-DialogConverter-container cq-DialogConverter-container"
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
            <items jcr:primaryType="nt:unstructured">
                <searchDialogContent
                    granite:class="js-cq-DialogConverter-dialogsContainer cq-DialogConverter-dialogsContainer"
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/container">
                    <granite:data
                        jcr:primaryType="nt:unstructured"
                        search-path="${empty param.path ? &quot;&quot; : param.path}"/>
                    <items jcr:primaryType="nt:unstructured">
                        <pathBrowser
                            granite:class="js-cq-DialogConverter-searchPath cq-DialogConverter-searchPath cq-DialogConverter-floatLeft"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                            name="Open path browser"
                            emptyText="Enter a path, e.g. /apps/geometrixx/components">
                        </pathBrowser>
                        <showButton
                            granite:class="js-cq-DialogConverter-showDialogs cq-DialogConverter-showDialogs cq-DialogConverter-floatLeft"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/button"
                            text="Show dialogs"/>
                        <text
                            granite:class="js-cq-DialogConverter-infoText cq-DialogConverter-infoText"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/text"
                            text=""/>
                        <dialogs
                            granite:class="js-cq-DialogConverter-dialogs cq-DialogConverter-dialogs"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/table"
                            itemResourceType="cq/dialogconversion/components/dialogs/item"
                            layoutId="list"
                            orderable="{Boolean}false"
                            path="${param.path}">
                            <columns jcr:primaryType="nt:unstructured">
                                <checkboxContainer jcr:primaryType="nt:unstructured"/>
                                <classicDialog
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Dialog (Classic UI)"/>
                                <links
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Links"/>
                                <touchDialog
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Dialog (Touch UI)"/>
                            </columns>
                            <datasource
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="cq/dialogconversion/components/dialogs/datasource"/>
                        </dialogs>
                        <convertButton
                            granite:class="js-cq-DialogConverter-convertDialogs"
                            granite:hidden="{Boolean}true"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/button"
                            text="Convert dialogs"/>
                    </items>
                </searchDialogContent>
                <convertedDialogs
                    granite:class="js-cq-DialogConverter-conversionResults cq-DialogConverter-conversionResults"
                    granite:hidden="{Boolean}true"
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/table"
                    layoutId="list">
                    <columns jcr:primaryType="nt:unstructured">
                        <classicDialog
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Dialog (Classic UI)"/>
                        <conversion
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Conversion to Touch UI"/>
                        <message
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Message"/>
                    </columns>
                </convertedDialogs>
            </items>
        </content>
    </jcr:content>
</jcr:root>
